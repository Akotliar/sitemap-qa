<div class="summary-grid">
    <div class="summary-card">
        <h3>Sitemaps</h3>
        <p>{{discoveredSitemaps.length}}</p>
    </div>
    <div class="summary-card">
        <h3>URLs Analyzed</h3>
        <p>{{totalUrls}}</p>
    </div>
    <div class="summary-card highlight">
        <h3>Issues Found</h3>
        <p>{{totalRisks}}</p>
    </div>
    <div class="summary-card">
        <h3>URLs Ignored</h3>
        <p>{{ignoredUrls.length}}</p>
    </div>
    <div class="summary-card">
        <h3>Scan Time</h3>
        <p>{{duration}}s</p>
    </div>
</div>
